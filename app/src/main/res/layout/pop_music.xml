<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px_700"
    android:layout_height="@dimen/px_460"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/px_590"
        android:layout_height="match_parent"
        android:background="@mipmap/music_01"
        android:padding="@dimen/px_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_28"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="@dimen/px_36"
                    android:layout_height="@dimen/px_30"
                    android:src="@mipmap/volumeicon_min" />

                <SeekBar
                    android:id="@+id/seekBar01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="@dimen/px_36"
                    android:layout_height="@dimen/px_30"
                    android:src="@mipmap/volumeicon_max" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_56"
                android:layout_marginRight="@dimen/px_36"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHead"
                    android:layout_width="@dimen/px_180"
                    android:layout_height="@dimen/px_180"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_26"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvInfo01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_36"
                        tools:text="1111111111" />

                    <TextView
                        android:id="@+id/tvInfo02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_20"
                        android:maxLines="3"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_30"
                        tools:text="1111111111" />
                </LinearLayout>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_36"
                android:layout_marginRight="@dimen/px_36"
                android:layout_marginTop="@dimen/px_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_36"
                android:layout_marginRight="@dimen/px_36">

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px_18" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px_18" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLeft"
                    android:layout_width="@dimen/px_54"
                    android:layout_height="@dimen/px_46"
                    android:src="@mipmap/music_06" />

                <ImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="@dimen/px_88"
                    android:layout_height="@dimen/px_80"
                    android:src="@mipmap/music_08" />

                <ImageView
                    android:id="@+id/ivRight"
                    android:layout_width="@dimen/px_54"
                    android:layout_height="@dimen/px_46"
                    android:src="@mipmap/music_07" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#404040"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/px_10">

        <ImageView
            android:id="@+id/ivRight01"
            android:layout_width="@dimen/px_76"
            android:layout_height="@dimen/px_76"
            android:src="@mipmap/music_02" />

        <ImageView
            android:id="@+id/ivRight02"
            android:layout_width="@dimen/px_76"
            android:layout_height="@dimen/px_76"
            android:layout_marginTop="@dimen/px_24"
            android:src="@mipmap/musix_03" />
    </LinearLayout>

</LinearLayout>