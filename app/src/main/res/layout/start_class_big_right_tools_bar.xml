<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMenuRight"
    android:layout_width="@dimen/px_235"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:layout_marginBottom="@dimen/start_class_bottom_bar_height"
    android:clickable="true"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded,PxUsage">


    <ImageView
        android:id="@+id/viewMenuRightControl"
        android:layout_width="@dimen/px_40"
        android:layout_height="@dimen/px_459"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/new_97"/>


    <LinearLayout
        android:layout_width="@dimen/px_195"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#7F332c2b"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.hhkj.dyedu.view.ScaleLinearLayout
                    android:layout_marginTop="@dimen/px_45"
                    android:id="@+id/layoutBigRightMenu06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivRightMenu01"
                        android:layout_width="@dimen/px_120"
                        android:layout_height="@dimen/px_120"
                        android:src="@mipmap/new_53"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_24"
                        android:layout_marginTop="@dimen/px_12"
                        android:text="@string/menu_01"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_24"/>
                </com.hhkj.dyedu.view.ScaleLinearLayout>

                <com.hhkj.dyedu.view.ScaleLinearLayout
                    android:id="@+id/layoutBigRightMenu07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivRightMenu02"
                        android:layout_width="@dimen/px_120"
                        android:layout_height="@dimen/px_120"
                        android:src="@mipmap/new_54"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_24"
                        android:layout_marginTop="@dimen/px_12"
                        android:text="@string/menu_02"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_24"/>


                </com.hhkj.dyedu.view.ScaleLinearLayout>

                <com.hhkj.dyedu.view.ScaleLinearLayout
                    android:id="@+id/layoutBigRightMenu01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_120"
                        android:layout_height="@dimen/px_120"
                        android:src="@mipmap/new_55"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_24"
                        android:layout_marginTop="@dimen/px_12"
                        android:text="@string/menu_03"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_24"/>
                </com.hhkj.dyedu.view.ScaleLinearLayout>

                <com.hhkj.dyedu.view.ScaleLinearLayout
                    android:id="@+id/layoutBigRightMenu02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_120"
                        android:layout_height="@dimen/px_120"
                        android:src="@mipmap/new_56"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_24"
                        android:layout_marginTop="@dimen/px_12"
                        android:text="@string/menu_04"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_24"/>

                </com.hhkj.dyedu.view.ScaleLinearLayout>


                <com.hhkj.dyedu.view.ScaleLinearLayout
                    android:id="@+id/layoutBigRightMenu04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_120"
                        android:layout_height="@dimen/px_120"
                        android:src="@mipmap/new_57"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_12"
                        android:text="@string/menu_05"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_24"/>
                </com.hhkj.dyedu.view.ScaleLinearLayout>

                <com.hhkj.dyedu.view.ScaleImageView
                    android:id="@+id/tvStartClass"
                    android:layout_width="@dimen/px_142"
                    android:layout_height="@dimen/px_65"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/px_48"
                    android:layout_marginTop="@dimen/px_26"
                    android:src="@mipmap/exit"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>