<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61BDEC"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded,UseCompoundDrawables,PxUsage,ContentDescription">

    <include layout="@layout/top_title_bar_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/px_354"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/ivTopTitleHead"
                android:layout_width="@dimen/px_246"
                android:layout_height="@dimen/px_246"
                android:layout_marginTop="@dimen/px_70"
                app:sriv_left_bottom_corner_radius="@dimen/px_123"
                app:sriv_left_top_corner_radius="@dimen/px_123"
                app:sriv_right_bottom_corner_radius="@dimen/px_123"
                app:sriv_right_top_corner_radius="@dimen/px_123"
                tools:background="#ff0000" />

            <ImageView
                android:id="@+id/iv0100"
                android:layout_width="@dimen/px_64"
                android:layout_height="@dimen/px_64"
                android:layout_marginTop="@dimen/px_26"
                android:src="@mipmap/new_89" />

            <LinearLayout
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:id="@+id/layout01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/px_20"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:src="@mipmap/new_93" />

                <TextView
                    android:singleLine="true"
                    android:gravity="center"
                    android:id="@+id/tv01"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_center_01"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:id="@+id/layout02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables"
                >

                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:src="@mipmap/new_90" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv02"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_center_02"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:id="@+id/layout03"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv03"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:src="@mipmap/new_83" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tv03"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_center_03"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:id="@+id/layout06"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv06"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:src="@mipmap/new_83" />

                <TextView
                    android:id="@+id/tv06"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_center_04"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:id="@+id/layout05"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/px_32"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:src="@mipmap/new_91" />

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_center_05"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>