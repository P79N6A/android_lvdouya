<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_640"
    android:layout_height="@dimen/px_440"
    android:background="@drawable/bg_11"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_52"
        android:paddingLeft="@dimen/px_60"
        android:paddingRight="@dimen/px_60">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改购买数量"
            android:textColor="#404040"
            android:textSize="@dimen/px_32"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginBottom="@dimen/px_8"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:layout_marginTop="@dimen/px_8"
        android:background="#e1e1e2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_160"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_20"
            android:gravity="center"
            android:maxLength="15"
            android:minHeight="@dimen/px_66"
            android:minWidth="@dimen/px_110"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:selectAllOnFocus="true"
            android:textColor="#333333"
            android:textColorHint="#333333"
            android:textSize="@dimen/px_40"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_100"
            android:layout_weight="1"
            android:background="@drawable/bg_21"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_30"/>

        <TextView
            android:id="@+id/tv02"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_100"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_weight="1"
            android:background="@drawable/bg_22"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_30"/>
    </LinearLayout>
</LinearLayout>