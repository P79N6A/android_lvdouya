<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <include layout="@layout/top_title_bar_03" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_6"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_26"
        android:paddingRight="@dimen/px_26">

        <ImageView
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:src="@mipmap/dy_63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_marginRight="@dimen/px_12"
            android:text="班级名称"
            android:textColor="#FF9254DE"
            android:textSize="@dimen/px_36" />

        <TextView
            android:id="@+id/tv01"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80"
            android:layout_marginRight="@dimen/px_40"
            android:layout_weight="190"
            android:background="@drawable/bg_29"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/px_32" />

        <ImageView
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:src="@mipmap/dy_64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_marginRight="@dimen/px_12"
            android:text="上课时间"
            android:textColor="#FFFF4D4F"
            android:textSize="@dimen/px_36" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80"
            android:layout_marginRight="@dimen/px_40"
            android:layout_weight="160"
            android:background="@drawable/bg_29"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/px_32" />

        <ImageView
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:src="@mipmap/dy_67" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_12"
            android:text="班级人数："
            android:textColor="#FFFFC53D"
            android:textSize="@dimen/px_36" />

        <TextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_12"
            android:text="0"
            android:textColor="#FF000000"
            android:textSize="@dimen/px_36" />

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="@dimen/px_280"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/dy2_07" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E6E6E6" />

    <include layout="@layout/base_default_list" />
</LinearLayout>