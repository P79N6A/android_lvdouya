<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSmallTools01"
    android:layout_width="@dimen/start_class_right_menu_small_width"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="@dimen/start_class_bottom_bar_height"
    android:layout_marginTop="@dimen/start_class_top_bar_height"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:visibility="visible"
    tools:ignore="PxUsage"
    android:visibility="gone">

    <ImageView
        android:id="@+id/ivSmallTools01Close"
        android:layout_width="@dimen/px_72"
        android:layout_height="@dimen/px_72"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:src="@mipmap/broadcast_15"/>
    <com.hhkj.dyedu.view.ScaleLinearLayout
        android:id="@+id/ivSmallTools01_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/px_107"
            android:layout_height="@dimen/px_107">

            <ImageView
                android:layout_width="@dimen/px_107"
                android:layout_height="@dimen/px_107"
                android:src="@mipmap/new_21"/>
            <com.flyco.roundview.RoundTextView
                android:visibility="invisible"
                android:id="@+id/circle03"
                android:layout_gravity="right"
                app:rv_cornerRadius="@dimen/px_10"
                app:rv_backgroundColor="#ff0000"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:text="搭建参考"
            android:textColor="#404040"
            android:textSize="@dimen/px_24"/>
    </com.hhkj.dyedu.view.ScaleLinearLayout>


    <com.hhkj.dyedu.view.ScaleLinearLayout
        android:id="@+id/ivSmallTools01_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/px_107"
            android:layout_height="@dimen/px_107">

            <ImageView
                android:layout_width="@dimen/px_107"
                android:layout_height="@dimen/px_107"
                android:src="@mipmap/d_3"/>
            <com.flyco.roundview.RoundTextView
                android:visibility="invisible"
                android:id="@+id/circle01"
                android:layout_gravity="right"
                app:rv_cornerRadius="@dimen/px_10"
                app:rv_backgroundColor="#ff0000"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:text="三维图纸"
            android:textColor="#404040"
            android:textSize="@dimen/px_24"/>
    </com.hhkj.dyedu.view.ScaleLinearLayout>


    <com.hhkj.dyedu.view.ScaleLinearLayout
        android:id="@+id/ivSmallTools01_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="@dimen/px_107"
            android:layout_height="@dimen/px_107">

            <ImageView
                android:layout_width="@dimen/px_107"
                android:layout_height="@dimen/px_107"
                android:src="@mipmap/new_22"/>
            <com.flyco.roundview.RoundTextView
                android:visibility="invisible"
                android:id="@+id/circle02"
                android:layout_gravity="right"
                app:rv_cornerRadius="@dimen/px_10"
                app:rv_backgroundColor="#ff0000"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:text="@string/tool_17"
            android:textColor="#404040"
            android:textSize="@dimen/px_24"/>
    </com.hhkj.dyedu.view.ScaleLinearLayout>

</LinearLayout>