<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="@dimen/px_338"
    android:layout_height="@dimen/px_863"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/px_90"
    android:layout_marginRight="@dimen/px_90">


    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="@dimen/px_210"
        android:layout_height="@dimen/px_863"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/bg_new_03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view01"
            android:layout_width="1dp"
            android:layout_height="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivC"
        android:layout_width="@dimen/px_338"
        android:layout_height="@dimen/px_123"
        android:layout_marginTop="@dimen/px_159"
        android:src="@mipmap/bg_new_05" />

    <ImageView
        android:id="@+id/ivC2"
        android:layout_width="@dimen/px_132"
        android:layout_height="@dimen/px_132"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginTop="@dimen/px_18"
        android:src="@mipmap/bg_new_07" />


    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_500"
        android:gravity="center"
        android:paddingLeft="@dimen/px_12"
        android:paddingRight="@dimen/px_12"
        android:text="111"
        android:textColor="#7f7f7f"
        android:textSize="@dimen/px_40"
        app:rv_backgroundColor="#EEEEEF"
        app:rv_cornerRadius="@dimen/px_18" />


    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_359"
        android:text="2"
        android:textColor="#ff0000"
        android:textSize="@dimen/px_96" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_248"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="@dimen/px_51"
            android:layout_height="@dimen/px_51"
            android:src="@mipmap/new_12" />

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="@dimen/px_51"
            android:layout_height="@dimen/px_51"
            android:layout_marginLeft="@dimen/px_20"
            android:src="@mipmap/new_11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTime"
        android:layout_width="@dimen/px_170"
        android:layout_height="@dimen/px_170"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@mipmap/bg_new_04"
        android:gravity="center"
        android:orientation="horizontal">


        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_44"
            android:gravity="center"
            android:orientation="horizontal"
            app:rv_cornerRadius="@dimen/px_5"
            app:rv_strokeColor="#000"
            app:rv_strokeWidth="@dimen/px_1">

            <com.hhkj.dyedu.view.NumTextView
                android:id="@+id/tvNum01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/px_28" />

            <com.hhkj.dyedu.view.NumTextView
                android:id="@+id/tvNum02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/px_28" />
        </com.flyco.roundview.RoundLinearLayout>

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_12"
            android:gravity="center"
            android:orientation="horizontal"
            app:rv_cornerRadius="@dimen/px_5"
            app:rv_strokeColor="#000"
            app:rv_strokeWidth="@dimen/px_1">


            <com.hhkj.dyedu.view.NumTextView
                android:id="@+id/tvNum03"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/px_28" />

            <com.hhkj.dyedu.view.NumTextView
                android:id="@+id/tvNum04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/px_28" />
        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>
</FrameLayout>