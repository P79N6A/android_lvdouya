<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px_780"
    android:layout_height="@dimen/px_886"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="PxUsage">

    <ImageView
        android:layout_width="@dimen/px_780"
        android:layout_height="@dimen/px_792"
        android:src="@mipmap/tip_01"/>

    <EditText
        android:id="@+id/et01"
        android:focusableInTouchMode="true"
        android:hint="请输入提示内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_280"
        android:background="@null"
        android:text="认真学习哦！！！"
        android:textColor="#e60012"
        android:textSize="@dimen/px_48"/>


    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tip_02"/>
</RelativeLayout>