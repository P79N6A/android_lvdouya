        <LinearLayout
            android:id="@+id/li_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center">

    <ImageView
        android:layout_marginLeft="@dimen/px_82"
        android:id="@+id/ivPL"
        android:layout_width="@dimen/px_60"
        android:paddingRight="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:layout_height="@dimen/px_60"
        android:layout_marginRight="@dimen/px_65"
        android:src="@mipmap/new_62"/>

        <TextView
            android:id="@+id/tv_onePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="#404040"
            android:text="00"
            android:textSize="@dimen/px_35"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#404040"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/tv_twoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textColor="#404040"
            android:text="00"
            android:textSize="@dimen/px_35"/>

    <ImageView
        android:id="@+id/ivPR"
        android:layout_width="@dimen/px_60"
        android:paddingRight="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:layout_height="@dimen/px_60"
        android:src="@mipmap/new_61"/>
        </LinearLayout>

</LinearLayout>