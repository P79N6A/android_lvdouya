<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry,PxUsage,HardcodedText">

    <include layout="@layout/top_title_bar_05" />

    <LinearLayout
        android:layout_width="@dimen/px_724"
        android:layout_height="@dimen/px_117"
        android:layout_marginTop="@dimen/px_69"
        android:background="@drawable/bg_ffffff_corners_18"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_34"
        android:paddingRight="@dimen/px_34">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国+86"
            android:textColor="#48b5f5"
            android:textSize="@dimen/px_34" />

        <EditText
            android:id="@+id/et01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="20"
            android:paddingLeft="@dimen/px_50"
            android:singleLine="true"
            android:textColor="#404040"
            android:textSize="@dimen/px_34" />
    </LinearLayout>

    <Button
        android:id="@+id/bt01"
        android:layout_width="@dimen/px_729"
        android:layout_height="@dimen/px_108"
        android:layout_marginTop="@dimen/px_40"
        android:background="@drawable/bg_ffdf00_corners_54"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="@dimen/px_45" />

    <LinearLayout
        android:id="@+id/layoutAgree"
        android:layout_width="@dimen/px_729"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAgree"
            android:layout_width="@dimen/px_36"
            android:layout_height="@dimen/px_36"
            android:src="@mipmap/dy_23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="我已阅读并同意"
            android:textColor="#1f1f28"
            android:textSize="@dimen/px_23" />

        <TextView
            android:id="@+id/tvAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条款和隐私政策"
            android:textColor="#2fabf5"
            android:textSize="@dimen/px_23" />
    </LinearLayout>
</LinearLayout>