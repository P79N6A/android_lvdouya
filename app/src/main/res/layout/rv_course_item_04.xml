<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/px_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_48"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/px_34"
    android:layout_marginLeft="@dimen/px_34"
    android:layout_marginRight="@dimen/px_34"
    android:orientation="vertical"
    tools:ignore="PxUsage"
    xmlns:rv="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/ivHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="@dimen/px_0"
            app:sriv_left_top_corner_radius="@dimen/px_60"
            app:sriv_right_bottom_corner_radius="@dimen/px_0"
            app:sriv_right_top_corner_radius="@dimen/px_60"/>

        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="wrap_content"
            android:padding="@dimen/px_9"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="#FFDF00"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_34"/>

        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/layoutPlay"
            rv:rv_backgroundColor="#33000000"
            rv:rv_cornerRadius_TL="@dimen/px_60"
            rv:rv_cornerRadius_TR="@dimen/px_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/px_160"
                android:layout_height="@dimen/px_160"
                android:layout_centerInParent="true"
                android:src="@mipmap/play"/>
        </com.flyco.roundview.RoundRelativeLayout>


        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/layoutChoose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            rv:rv_backgroundColor="#33000000"
            rv:rv_cornerRadius_TL="@dimen/px_60"
            rv:rv_cornerRadius_TR="@dimen/px_60">

            <ImageView
                android:layout_width="@dimen/px_160"
                android:layout_height="@dimen/px_160"
                android:layout_centerInParent="true"
                android:src="@mipmap/content_14"/>
        </com.flyco.roundview.RoundRelativeLayout>
    </FrameLayout>


    <FrameLayout

        android:id="@+id/layoutBo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_10"
                android:layout_marginLeft="@dimen/px_8"
                android:layout_marginRight="@dimen/px_8"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/px_30"
                    tools:text="小汽车拼装课程"/>

                <TextView
                    android:id="@+id/tvbuuu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/px_30"
                    android:visibility="gone"/>
            </LinearLayout>


            <LinearLayout
                android:paddingRight="@dimen/px_50"
                android:paddingLeft="@dimen/px_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
               >

                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="@dimen/px_34"
                    android:layout_height="@dimen/px_34"
                    android:layout_marginRight="@dimen/px_12"
                    android:src="@mipmap/content_16"/>

                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_6"
                    android:layout_marginRight="@dimen/px_6"
                    android:src="@mipmap/content_15"/>

                <ImageView
                    android:id="@+id/iv03"
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_6"
                    android:layout_marginRight="@dimen/px_6"
                    android:src="@mipmap/content_15"/>

                <ImageView
                    android:id="@+id/iv04"
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_6"
                    android:layout_marginRight="@dimen/px_6"
                    android:src="@mipmap/content_15"/>

                <ImageView
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_8"
                    android:layout_marginRight="@dimen/px_8"
                    android:src="@mipmap/content_15"/>

                <ImageView
                    android:id="@+id/iv05"
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:layout_marginLeft="@dimen/px_6"
                    android:layout_marginRight="@dimen/px_6"
                    android:src="@mipmap/content_15"/>
            </LinearLayout>

            <LinearLayout
                android:paddingRight="@dimen/px_50"
                android:paddingLeft="@dimen/px_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_32"
                    android:layout_height="@dimen/px_32"
                    android:src="@mipmap/content_17"/>

                <TextView
                    android:singleLine="true"
                    android:id="@+id/duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_weight="1"
                    android:text="20分钟"
                    android:textColor="#666666"
                    android:textSize="@dimen/px_30"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7e00"
                    android:textSize="@dimen/px_30"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>