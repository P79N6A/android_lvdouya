<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <include layout="@layout/top_title_bar_01"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_12"
        android:background="#E6E6E6"/>

    <!--星期之类的-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/px_52"
                android:layout_height="@dimen/px_52"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:sriv_left_bottom_corner_radius="@dimen/px_26"
                app:sriv_left_top_corner_radius="@dimen/px_26"
                app:sriv_right_bottom_corner_radius="@dimen/px_26"
                app:sriv_right_top_corner_radius="@dimen/px_26"
                tools:background="#ff0000"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_16"
                android:singleLine="true"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"
                tools:text="赵老师"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期一"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期二"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期三"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期四"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期五"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期六"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="星期日"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="#979797"/>

            <TextView
                android:id="@+id/tv01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上午"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="#979797"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下午"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:background="#979797"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="晚上"
                android:textColor="#FF5A5A5A"
                android:textSize="@dimen/px_36"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:overScrollMode="never"/>
    </LinearLayout>
</LinearLayout>