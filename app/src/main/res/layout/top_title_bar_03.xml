<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_125"
    android:background="#FFD202"
    tools:ignore="PxUsage,RtlHardcoded,HardcodedText">

    <RelativeLayout
        android:id="@+id/layoutLeft"
        android:layout_width="@dimen/px_120"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="@dimen/px_57"
            android:layout_height="@dimen/px_57"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:src="@mipmap/new_13"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/layoutLeft"
        android:text="测试标题"
        android:textColor="#fffefe"
        android:textSize="@dimen/px_48"/>

    <TextView
        android:layout_marginRight="@dimen/px_20"
        android:layout_toLeftOf="@+id/ivTop01"
        android:visibility="gone"
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="测试标题"
        android:textColor="#fffefe"
        android:textSize="@dimen/px_48"/>
    <ImageView
        android:id="@+id/ivTop01"
        android:layout_width="@dimen/px_260"
        android:layout_height="@dimen/px_75"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_48"
        android:layout_toLeftOf="@id/ivTopTitleHead"
        android:src="@mipmap/dy2_03"/>

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/ivTopTitleHead"
        android:layout_width="@dimen/px_88"
        android:layout_height="@dimen/px_88"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_42"
        app:sriv_left_bottom_corner_radius="@dimen/px_44"
        app:sriv_left_top_corner_radius="@dimen/px_44"
        app:sriv_right_bottom_corner_radius="@dimen/px_44"
        app:sriv_right_top_corner_radius="@dimen/px_44"
        tools:background="#ff0000"/>
</RelativeLayout>
