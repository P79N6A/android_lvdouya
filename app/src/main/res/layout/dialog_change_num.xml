<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="220dp"
    android:background="@drawable/bg_11"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改购买数量"
            android:textColor="#404040"
            android:textSize="16sp"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="4dp"
        android:background="#e1e1e2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@+id/tvReduce"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#585858"
            android:textSize="24sp"
            android:text=" - "/>

        <EditText
            android:selectAllOnFocus="true"
            android:id="@+id/etInputNum"
            android:textColorHint="#333333"
            android:hint="1"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:textSize="20sp"
            android:text="1"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/bg_20"
            android:minWidth="55dp"
            android:layout_width="wrap_content"
            android:layout_height="33dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tvAdd"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#585858"
            android:textSize="24sp"
            android:text=" + "/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/bg_21"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/bg_22"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>