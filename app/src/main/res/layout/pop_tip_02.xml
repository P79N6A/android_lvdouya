<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px_780"
    android:layout_height="@dimen/px_886"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="PxUsage,HardcodedText,ContentDescription,TextFields">

    <ImageView
        android:layout_width="@dimen/px_780"
        android:layout_height="@dimen/px_792"
        android:src="@mipmap/tip_03"
        tools:ignore="ContentDescription"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_280"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:background="@null"
        android:hint="请输入提示内容"
        android:text="操作过程中，小心工具，切勿划伤自己及他人！！"
        android:textColor="#e60012"
        android:textSize="@dimen/px_48"
        tools:ignore="HardcodedText,TextFields"/>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tip_02"/>
</RelativeLayout>