<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_200"
    android:layout_marginTop="@dimen/px_5"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="PxUsage,RtlHardcoded,HardcodedText">

    <TextView
        android:id="@+id/pos"
        android:layout_width="@dimen/px_80"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:text="1"
        android:textColor="#FF939393"
        android:textSize="@dimen/px_36"/>

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/px_152"
        android:layout_height="@dimen/px_152"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_60"
        app:sriv_left_bottom_corner_radius="@dimen/px_76"
        app:sriv_left_top_corner_radius="@dimen/px_76"
        app:sriv_right_bottom_corner_radius="@dimen/px_76"
        app:sriv_right_top_corner_radius="@dimen/px_76"
        tools:background="#ff0000"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_152"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赵老师"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/px_48"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/px_540"
            android:singleLine="true"
            android:text="账号：teacher001"
            android:textColor="#FF666666"
            android:textSize="@dimen/px_36"/>
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


    <ImageView
        android:layout_marginRight="@dimen/px_72"
        android:id="@+id/iv08"
        android:layout_width="@dimen/px_260"
        android:layout_height="@dimen/px_94"
        android:src="@mipmap/kqs_01"/>


    <ImageView
        android:id="@+id/iv01"
        android:layout_width="@dimen/px_350"
        android:layout_height="@dimen/px_100"
        android:src="@mipmap/dy2_04"/>

    <ImageView
        android:id="@+id/iv02"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginRight="@dimen/px_50"
        android:src="@mipmap/dy2_06"/>

    <ImageView
        android:id="@+id/iv03"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_marginRight="@dimen/px_28"
        android:src="@mipmap/dy2_05"/>
</LinearLayout>