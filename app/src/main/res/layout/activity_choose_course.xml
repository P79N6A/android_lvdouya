<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <include layout="@layout/top_title_bar_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/px_374"
            android:layout_height="match_parent">

            <View
                android:layout_width="@dimen/px_350"
                android:layout_height="match_parent"
                android:background="#fff" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvleft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/px_40"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/px_30">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_97"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginLeft="@dimen/px_88"
                android:layout_marginTop="@dimen/px_24" />

            <include layout="@layout/base_default_list" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>