<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_140"
    android:layout_marginBottom="@dimen/px_2"
    android:background="#ffffff"
    android:orientation="horizontal"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="@dimen/px_120"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv03"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginLeft="@dimen/px_26"
            android:src="@mipmap/zx_108"/>

    </LinearLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="220"
        android:gravity="center_vertical"
        android:text="家长账号"
        android:textColor="#A6000000"
        android:textSize="@dimen/px_36"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="160"
        android:gravity="center"
        android:text="姓名"
        android:textColor="#A6000000"
        android:textSize="@dimen/px_36"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="145"
        android:gravity="center"
        android:text="性别"
        android:textColor="#A6000000"
        android:textSize="@dimen/px_36"/>

    <TextView
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="145"
        android:gravity="center"
        android:text="年龄"
        android:textColor="#A6000000"
        android:textSize="@dimen/px_36"/>

    <TextView
        android:id="@+id/study"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="145"
        android:gravity="center"
        android:text="学习情况"
        android:textColor="#A6000000"
        android:textSize="@dimen/px_36"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginRight="@dimen/px_22"
            android:src="@mipmap/dy2_06"/>

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:src="@mipmap/dy2_05"/>

    </LinearLayout>
</LinearLayout>